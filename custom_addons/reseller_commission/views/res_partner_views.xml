<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_commission" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.commission</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Commission Settings" name="commission_settings">
                    <group>
                        <field name="is_principal"/>
                        <field name="commission_type" invisible="not is_principal"/>
                        <field name="commission_rate" invisible="not is_principal"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
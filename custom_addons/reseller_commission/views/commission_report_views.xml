<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_commission_graph" model="ir.ui.view">
        <field name="name">sale.order.commission.graph</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <graph string="Analisis Komisi Agen" type="bar" sample="1">
                <field name="principal_id"/> <field name="commission_amount" type="measure"/> </graph>
        </field>
    </record>

    <record id="view_sale_order_commission_pivot" model="ir.ui.view">
        <field name="name">sale.order.commission.pivot</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <pivot string="Tabel Komisi Agen" sample="1">
                <field name="principal_id" type="row"/> <field name="date_order" interval="month" type="col"/> <field name="commission_amount" type="measure"/> </pivot>
        </field>
    </record>

    <record id="action_commission_report" model="ir.actions.act_window">
        <field name="name">Commission Analysis</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">graph,pivot</field>
        <field name="domain">[('is_agent_sale', '=', True)]</field> <field name="context">{'search_default_group_by_principal': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Belum ada data komisi untuk dianalisis.
            </p>
        </field>
    </record>

    <menuitem id="menu_commission_report"
              name="Commission Report"
              action="action_commission_report"
              parent="sale.menu_sale_report"
              sequence="10"/>
</odoo>